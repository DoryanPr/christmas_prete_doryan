{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Ean</th>
            <th>Name</th>
            <th>Teaser</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stack</th>
            <th>Picturemain</th>
            <th>Picturefront</th>
            <th>Pictureback</th>
            <th>Manuel</th>
            {% if is_granted('ROLE_ADMIN') %}
                <th>actions</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.ean }}</td>
                <td>{{ article.name }}</td>
                <td>{{ article.teaser }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.price }}</td>
                <td>{{ article.stack }}</td>
                <td>{{ article.picturemain }}</td>
                <td>{{ article.picturefront }}</td>
                <td>{{ article.pictureback }}</td>
                <td>{{ article.manuel }}</td>
                {% if is_granted('ROLE_ADMIN') %}
                    <td>
                        <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                        <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                    </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('article_new') }}">Create new</a>
    {% endif %}
{% endblock %}
