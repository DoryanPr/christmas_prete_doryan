{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Fiche détaillée</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Visuel</th>
            <td><img src="{{ asset('uploads/manuels/' ~ article.picturemain) }}" alt="" width="100px"
                     height="100px"></td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ article.name }}</td>
        </tr>
        <tr>
            <th>Catégorie</th>
            <td>{{ article.category.name }}</td>
        </tr>
        <tr>
            <th>Teaser</th>
            <td>{{ article.teaser }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ article.description }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ article.price + article.price * 0.2 }} euros</td>
        </tr>
        <tr>
            <th>Picturefront</th>
            <td><img src="{{ asset('uploads/manuels/' ~ article.picturefront) }}" alt="" width="100px"
                     height="100px"></td>
        </tr>
        <tr>
            <th>Pictureback</th>
            <td><img src="{{ asset('uploads/manuels/' ~ article.pictureback) }}" alt="" width="100px"
                     height="100px"></td>
        </tr>
        <tr>
            <th>Manuel</th>
            <td><a href="{{ asset('uploads/manuels/' ~ article.manuel) }}">Voir le manuel (PDF)</a></td>
        </tr>
        <tr>
            <th>Tags</th>
            <td>
                {% for tag in article.getTag() %}
                    {{ tag.name }}
                {% endfor %}
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}">Retour a la liste</a>

    <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
