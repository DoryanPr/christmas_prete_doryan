{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Teaser</th>
            <th>Picture</th>
            <th>actions</th>

            {% if is_granted('ROLE_ADMIN') %}
                <th>edit</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.teaser }}</td>
                <td><img src="{{ asset('uploads/manuels/' ~ category.picture) }}" alt="" width="100px"
                         height="100px"></td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}">Voir</a>
                </td>
                {% if is_granted('ROLE_ADMIN') %}
                    <td>
                        <a href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
                    </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('category_new') }}">Nouvelle Cat√©gorie</a>
    {% endif %}
{% endblock %}
